@model LightLevel

@{
    var action = ViewContext.RouteData.Values["action"].ToString().Capitalize();

    ViewData["Title"] = $" | {action} Light Level";
}

<h1 class="mb-4">@action Light Level</h1>

<form asp-action="@action" asp-area="Admin" method="post">

    <div class="form-group row mb-2">
        <div class="col-sm-2"><label>Light Level ID:</label></div>

        @if (Operation.IsAdd(action))
        {
            <div class="col-sm-4">
                <input type="text" asp-for="LightLevelId" class="form-control" />
            </div>
            <div class="col-sm-6">
                <span asp-validation-for="LightLevelId" class="text-danger"></span>
            </div>
        }
        else
        {
            <div class="col-sm-4"><label>@Model.LightLevelId</label></div>
            <input type="hidden" asp-for="LightLevelId" />
        }
    </div>

    <div class="form-group row mb-3">
        <div class="col-sm-2"><label>Name:</label></div>

        @if (Operation.IsDelete(action))
        {
            <div class="col-sm-4"><label>@Model.Name</label></div>
            <input type="hidden" asp-for="Name" />
        }
        else
        {
            <div class="col-sm-4">
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="col-sm-6">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-sm-4 offset-sm-2">
            <button type="submit" class="btn btn-primary me-2">@action</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>